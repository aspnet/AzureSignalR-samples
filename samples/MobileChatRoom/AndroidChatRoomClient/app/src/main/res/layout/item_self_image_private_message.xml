<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:paddingRight="30dp"
    android:paddingEnd="30dp"
    tools:ignore="RtlSymmetry">

    <TextView
        android:id="@+id/textview_message_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textSize="8pt"
        android:textColor="@android:color/holo_blue_dark"/>

    <ImageView
        android:id="@+id/imageview_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sent_private_message_bubble"
        android:src="@drawable/ic_ready_to_pull"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">
        <TextView
            android:id="@+id/textview_message_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message_empty"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="6pt" />

        <TextView
            android:id="@+id/textview_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message_time"
            android:textSize="6pt"
            android:textColor="@android:color/darker_gray"
            android:paddingStart="50dp" />
    </LinearLayout>



</LinearLayout>
